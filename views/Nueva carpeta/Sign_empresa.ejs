<% include templates/head%>

<% include templates/header%>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Login</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="#" id="register-form-link">Register</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-danger" id="error" role="alert" style="display: none">Ha ocurrido un error</div>
                                <form id="login-form" role="form" style="display: block;">
                                    <div class="form-group">
                                        <input type="email" name="email" id="email" placeholder="correo@electronico.com" tabindex="1" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" id="password" placeholder="contraseña" tabindex="2" class="form-control">
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                        <label for="remember"> Remember Me</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="buttom" id="SigninEmpresa" value="Iniciar sesion" tabindex="4" class="form-control btn btn-login">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <form id="register-form" role="form"style="display: none;">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="nombre" id="nombre_empresa" placeholder="Introduzca su nombre" value="" required tabindex="2">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" name="email" id="email_empresa" tabindex="2" class="form-control" placeholder="Email Address" value="" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" id="password_empresa" tabindex="2" class="form-control" placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="repassword" id="repassword" tabindex="2" class="form-control" placeholder="Confirm Password"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="telefono" id="telefono_empresa" placeholder="Introduzca su numero de teléfono" value=""
                                            required tabindex="2">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="direccion" id="direccion_empresa" placeholder="Introduzca su dirección" value="" required
                                            tabindex="2">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="provincia" id="provincia_empresa" placeholder="Introduzca su Provincia" value="" required
                                            tabindex="2">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="localidad" id="localidad_empresa" placeholder="Introduzca su localidad" value=""
                                            required tabindex="2">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="button" name="register-submit" id="registrar_empresa" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include templates/footer%>
